<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="detailInfoIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_percent">@integer/detail_icon_ratio</item>
        <item name="android:foreground">@drawable/ic_border</item>
        <item name="tint">@color/colorPrimaryDark</item>
    </style>

    <style name="rowIcon" parent="detailInfoIcon">
        <item name="layout_constraintWidth_percent">@integer/rv_image_ratio</item>
        <item name="tint">@color/colorPrimaryDark</item>
    </style>

    <style name="tempRvText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/row_tempr_txt_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="locationText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/det_locat_txt_size</item>
        <item name="android:paddingTop">@dimen/det_locat_top_offset</item>
        <item name="android:paddingBottom">@dimen/row_offset_size</item>
    </style>

    <style name="tempDetailText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/det_tempr_txt_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/row_offset_size</item>
    </style>

    <style name="timeRvText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/row_time_txt_size</item>
        <item name="android:paddingStart">@dimen/base_offset</item>
    </style>

    <style name="descrRvText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/row_descr_txt_size</item>
        <item name="android:paddingStart">@dimen/base_offset</item>
    </style>

    <style name="shareBtnStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detailSeparator">
        <item name="android:layout_height">@dimen/det_sepr_height</item>
        <item name="android:layout_marginStart">@dimen/det_sepr_horz_margin</item>
        <item name="android:layout_marginEnd">@dimen/det_sepr_horz_margin</item>
        <item name="android:background">@drawable/det_separator</item>
        <item name="android:layerType">software</item>
    </style>



</resources>